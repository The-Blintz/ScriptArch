#!/bin/bash

environment () {

DE=""
DM=""
WM=""
seleccionDE=false
seleccionWM=false
seleccionXORG=false
seleccionTTY=false



cmd=(dialog --keep-tite --no-collapse --cr-wrap --backtitle "${title}" --title "-| Entorno |-" --column-separator "|" --no-tags --ok-label '< Seleccionar >' --nocancel --menu "\nElige una opci贸n\n " 12 50 12)

options=(3 "Emulador de Terminal | (tty)"
         1 "Entorno de escritorio | (DE)"
         2 "Gestor de ventanas | (WM)")

choices=$("${cmd[@]}" "${options[@]}" 2>&1 >/dev/tty)

for choice in $choices
do
    case $choice in
        1) #INICIO (DE)    

seleccionDE=true

cmd=(dialog --keep-tite --no-collapse --cr-wrap --backtitle "${title}" --column-separator "|" --no-tags --ok-label '< Seleccionar >' --menu "\nSelecciona tu escritorio a instalar - (DE)\n " 21 60 21)

options=(1 " > | xfce4 | Xfce desktop| <"
         2 " > | gnome | GNOME Classic desktop| <"
         3 " > | plasma | KDE Plasma desktop| <"
         4 " > | deepin | Deepin desktop| <"
         5 " > | mate | Mate GTK3 desktop| <"
         6 " > | lxqt | LXDE-Qt & Razor-qt projects| <"
         7 " > | lxde | The Lightweight X11 GTK2| <"
         8 " > | lxde-gtk3 | The Lightweight X11 GTK3| <"
         9 " > | budgie-desktop | Budgie desktop| <"
         10 " > | cinnamon | Cinnamon desktop| <"
         11 " > | gnome-flashback | GNOME 2 desktop| <"
         12 " > | enlightenment | Enlightenment desktop| <")

choices=$("${cmd[@]}" "${options[@]}" 2>&1 >/dev/tty)

for choice in $choices
do
    case $choice in
        
###########SELECCION (DE)
        1) #XFCE4

cmd=(dialog --keep-tite --backtitle "${title}" \
--no-collapse --cr-wrap --column-separator "|" --no-tags \
--ok-label '< Seleccionar >' --nocancel --menu "\n\
Selecciona una opci贸n para XFCE4 \n " 12 60 20)

options=(1 "   Xfce4                    "
         2 "   Xfce4 - Tema Arcris      ")

choices=$("${cmd[@]}" "${options[@]}" 2>&1 >/dev/tty)

for choice in $choices
do
    case $choice in

        1)  DE="Xfce4"
            ;;
            
        2)  DE="Xfce4 Arcris"
            ;;
            
    esac
done
        ;;


        2)  #INICIO GNOME
cmd=(dialog --keep-tite --backtitle "${title}" \
--no-collapse --cr-wrap --column-separator "|" --no-tags \
--ok-label '< Seleccionar >' --nocancel --menu "\n \
Selecciona una opci贸n para GNOME \n " 12 60 20)

options=(1 "   Gnome || Sistema Completo  "
         2 "   Gnome || Minimalista       "
         3 "   Gnome || Tema Arcris       ")

choices=$("${cmd[@]}" "${options[@]}" 2>&1 >/dev/tty)

for choice in $choices
do
    case $choice in

        1)  DE="Gnome"
            ;;
            
        2)  DE="Gnome Lite"
            ;;

        3)  DE="Gnome Arcris"
            ;;
            
    esac
done
            ;;
 
        3)  #INICIO KDE
cmd=(dialog --keep-tite --backtitle "${title}" \
--no-collapse --cr-wrap --column-separator "|" --no-tags \
--ok-label '< Seleccionar >' --nocancel --menu "\n \
Selecciona una opci贸n para KDE Plasma \n " 12 60 20)

options=(1 "   Plasma || Sistema Completo  "
         2 "   Plasma || Minimalista       ")

choices=$("${cmd[@]}" "${options[@]}" 2>&1 >/dev/tty)

for choice in $choices
do
    case $choice in

        1)  DE="KDE Plasma"
            ;;
            
        2)  DE="KDE Plasma Lite"
            ;;

    esac
done
            ;;


        4)  #INICIO DEEPIN
            DE="Deepin"
            ;;

        5)  #INICIO MATE
            DE="MATE"
            ;;

        6)  #INICIO LXQt
            DE="LXQt"
            ;;

        7)  #INICIO LXDE
            DE="LXDE"
            ;;

        8)  #INICIO LXDE GTK3
            DE="LXDE GTK3"
            ;;

        9)  #INICIO Budgie
            DE="Budgie"
            ;;

        10)  #INICIO Cinnamon
            DE="Cinnamon"
            ;;

        11)  #INICIO GNOME 2
            DE="GNOME 2"
            ;;

        12)  #INICIO Enlightenment
            DE="Enlightenment"
            ;;


    esac
done
            ;;
#########FIN ESCRITORIO


        2) #INICIO (WM)
seleccionWM=true

cmd=(dialog --keep-tite --backtitle "${title}" \
--no-collapse --cr-wrap --column-separator "|" --no-tags --ok-label '  Seleccionar  ' --menu "\nSelecciona tu gestor de ventana a instalar - (WM)\n " 14 60 14)

options=(1 "> i3wm | Disponible <"
         2 "> bspwm | Disponible <"
         3 "> dwm | Disponible <"
         4 "> awesome | Disponible <"
         5 "> openbox | Disponible <")

choices=$("${cmd[@]}" "${options[@]}" 2>&1 >/dev/tty)

for choice in $choices
do
    case $choice in
        1)  
            WM="i3wm"
            ;;

        2)
            WM="bspwm"
            ;;

        3)
            WM="dwm"
            ;;

        4)
            WM="awesome"
            ;;

        5)
            WM="openbox"
            ;;
    esac
done
#FINAL (WM)
            ;;
            

        3)
          seleccionTTY=true
          tty="tty"
          ;;


    esac
done

sectionenv=1

}






installenvironment () {


case $environment in 

  "tty")
  echo "" 
  echo "Se esta instalando el entorno TTY:" 
  echo "" 
  arch-chroot /mnt /bin/bash -c "pacman -Syu --noconfirm"

  ;;

  "Xfce4 Arcris")
  echo "" 
  echo "Se esta instalando el entorno Xfce4:" 
  echo "" 

  arch-chroot /mnt /bin/bash -c "pacman -S xorg --noconfirm"
  # arch-chroot /mnt /bin/bash -c "pacman -S xorg-apps --noconfirm"
  # arch-chroot /mnt /bin/bash -c "pacman -S xorg-server --noconfirm"
  # arch-chroot /mnt /bin/bash -c "pacman -S xorg-xinit --noconfirm"
  # arch-chroot /mnt /bin/bash -c "pacman -S xorg-twm --noconfirm"
  # arch-chroot /mnt /bin/bash -c "pacman -S xterm --noconfirm"

  arch-chroot /mnt /bin/bash -c "sudo -u $username yay xfce4 --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay xfce4-goodies --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay network-manager-applet --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay lightdm --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay lightdm-gtk-greeter --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay lightdm-gtk-greeter-settings --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay light-locker --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay accountsservice --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay mugshot --noeditmenu --noconfirm --needed"
 
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay gnu-free-fonts --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay ttf-hack --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay ttf-inconsolata --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay ttf-font-awesome --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay awesome-terminal-fonts --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay noto-fonts --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay noto-fonts-emoji --noeditmenu --noconfirm --needed"
  
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay ffmpegthumbs --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay ffmpegthumbnailer --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay freetype2 --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay poppler-glib --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay libgsf --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay raw-thumbnailer --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay libgsf --noeditmenu --noconfirm --needed"

  arch-chroot /mnt /bin/bash -c "systemctl enable lightdm"

  arch-chroot /mnt /bin/bash -c "sudo -u $username yay plata-theme-bin --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay papirus-icon-theme --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay gtk-engine-murrine --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay ttf-roboto --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay pavucontrol --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay gedit --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay gedit-plugins --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay plank --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay plank-theme-namor --noeditmenu --noconfirm --needed"

  arch-chroot /mnt /bin/bash -c "sudo -u $username yay android-file-transfer android-tools android-udev msmtp libmtp libcddb gvfs gvfs-afc gvfs-smb gvfs-gphoto2 gvfs-mtp gvfs-goa gvfs-nfs gvfs-google gst-libav dosfstools f2fs-tools ntfs-3g udftools nilfs-utils polkit gpart mtools cifs-utils --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay wget unzip zip --noeditmenu --noconfirm --needed"

  clear

  arch-chroot /mnt /bin/bash -c "wget https://raw.githubusercontent.com/CodigoCristo/themexfce4/master/configxfce4.zip -P /home/$username/"
  # arch-chroot /mnt /bin/bash -c "rm -r /home/$username/.config"
  ls --all /home/$username
  echo ""
  sleep 10
  arch-chroot /mnt /bin/bash -c "unzip -o /home/$username/configxfce4.zip -d /home/$username/"
  arch-chroot /mnt /bin/bash -c "rm /home/$username/configxfce4.zip"
  arch-chroot /mnt /bin/bash -c "chown -R $username:users /home/$username/.config/"
  echo ""
  sleep 10

  arch-chroot /mnt /bin/bash -c "sudo -u $username yay lightdm-webkit2-greeter --noeditmenu --noconfirm --needed"

arch-chroot /mnt /bin/bash -c "wget https://raw.githubusercontent.com/CodigoCristo/themexfce4/master/glorius.zip -P /home/$username/"
echo ""
sleep 10
arch-chroot /mnt /bin/bash -c "unzip -o /home/$username/glorius.zip -d /usr/share/lightdm-webkit/themes/"
arch-chroot /mnt /bin/bash -c "rm /home/$username/glorius.zip"

sed -i 's/^webkit_theme\s*=\s*\(.*\)/webkit_theme = glorious #\1/g' /mnt/etc/lightdm/lightdm-webkit2-greeter.conf
sed -i 's/^debug_mode\s*=\s*\(.*\)/debug_mode = true #\1/g' /mnt/etc/lightdm/lightdm-webkit2-greeter.conf
sed -i 's/#greeter-session=example-gtk-gnome/greeter-session=lightdm-webkit2-greeter/g' /mnt/etc/lightdm/lightdm.conf

# Comprimir un directorio
# zip sampleZipFile.zip -r /sampleZip/ExampleDir

# para sobreescribir archivos
# unzip -o sampleZipFile.zip 

# Descomprimir un archivo a un directorio diferente
# unzip sampleZipFile.zip -d /usr/sampleZip/ExampleDir

  ;;


  "Xfce4")
  echo "" 
  echo "Se esta instalando el entorno Xfce4:" 
  echo "" 

arch-chroot /mnt /bin/bash -c "pacman -S xorg --noconfirm"
