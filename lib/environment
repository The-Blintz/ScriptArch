echo ""
touch /mnt/etc/lightdm/slick-greeter.conf
tee /mnt/etc/lightdm/slick-greeter.conf <<EOF
[Greeter]
background=/usr/share/backgrounds/arcris.png
stretch-background-across-monitors=true
show-hostname=false
show-a11y=false
show-power=false
activate-numlock=true
background-color=#0000
draw-user-backgrounds=true
icon-theme-name=Adwaita
EOF

sed -i 's/#greeter-session=example-gtk-gnome/greeter-session=lightdm-slick-greeter/g' /mnt/etc/lightdm/lightdm.conf





