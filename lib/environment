  # arch-chroot /mnt /bin/bash -c "pacman -S xterm --noconfirm"

  arch-chroot /mnt /bin/bash -c "sudo -u $username yay xfce4 --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay xfce4-goodies --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay network-manager-applet --noeditmenu --noconfirm --needed"
