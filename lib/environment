  arch-chroot /mnt /bin/bash -c "sudo -u $username yay mugshot --noeditmenu --noconfirm --needed"
 
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay gnu-free-fonts --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay ttf-hack --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay ttf-inconsolata --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay ttf-font-awesome --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay awesome-terminal-fonts --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay noto-fonts --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay noto-fonts-emoji --noeditmenu --noconfirm --needed"
  
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay ffmpegthumbs --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay ffmpegthumbnailer --noeditmenu --noconfirm --needed"
  arch-chroot /mnt /bin/bash -c "sudo -u $username yay freetype2 --noeditmenu --noconfirm --needed"
